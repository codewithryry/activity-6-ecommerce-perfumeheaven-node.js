<!DOCTYPE html>
<html class="no-js" lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Perfume Collection || Perfume Heaven</title>
    <style>
        /* Global Styles */
        body {
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f8f8f8;
            display: flex;
            flex-direction: column;
            min-height: 100vh; /* Make sure the body takes the full height */
        }

        /* Navigation Bar */
        .top-bar {
            background-color: #333;
            color: #fff;
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 10px 0;
        }

        .top-bar .title-area h1 a {
            color: #fff;
            text-decoration: none;
            padding-left: 20px;
            font-size: 1.8em;
        }

        .top-bar .title-area h1 {
            margin: 0;
        }

        .top-bar .right {
            list-style: none;
            margin: 0;
            padding-right: 20px;
            display: flex;
            align-items: center;
        }

        .top-bar li {
            padding: 0 10px;
        }

        .top-bar a {
            color: #fff;
            text-decoration: none;
            font-size: 1.1em;
        }

        .top-bar a:hover {
            color: #ddd;
        }

        .top-bar .right .active a {
            text-decoration: underline;
            color: #ddd;
        }

        /* Main Content */
        .container {
            padding: 20px;
            flex: 1; /* Allow the container to grow and take available space */
        }

        .products-grid {
            display: grid;
            grid-template-columns: repeat(3, 1fr); /* Three products per row */
            gap: 20px;
            margin-top: 20px;
        }

        .product-item {
            background-color: #fff;
            padding: 15px;
            border: 1px solid #ddd;
            border-radius: 5px;
            text-align: center;
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease;
        }

        .product-item:hover {
            transform: scale(1.05);
        }

        .product-item img {
            width: 100px;
            height: auto;
            margin-bottom: 10px;
        }

        .product-item h2 {
            font-size: 1.2em;
            margin: 0;
            margin-bottom: 10px;
            color: #333;
        }

        .product-item p {
            margin: 0;
            margin-bottom: 15px;
            color: #666;
        }

        .product-item form {
            margin-top: 10px;
        }

        button {
            background-color: #28a745;
            color: #fff;
            padding: 8px 16px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        button:hover {
            background-color: #218838;
        }

        /* Footer */
        footer {
            background-color: #333; /* Ensure footer background matches */
            color: #fff; /* Ensure footer text color matches */
            text-align: center;
            font-size: 0.9em; /* Consistent font size */
            padding: 20px; /* Consistent padding */
            margin-top: auto; /* Push footer to the bottom */
        }

        footer p {
            margin: 0;
        }
    </style>
</head>
<body>

    <nav class="top-bar">
        <div class="title-area">
            <h1><a href="/">Perfume Heaven</a></h1>
        </div>
    
        <section class="top-bar-section">
            <!-- Right Nav Section -->
            <ul class="right">
                <li><a href="/about">About</a></li>
                <li class="active"><a href="/products">Perfume Collection</a></li>
                <li><a href="/cart">View Cart</a></li>
                <li><a href="/orders">My Orders</a></li>
                <li><a href="/contact">Contact</a></li>
                <% if (user) { %> <!-- Check if user is logged in -->
                    <li><a href="/profile">My Account</a></li>
                    <li><a href="/logout">Log Out</a></li>
                <% } else { %> <!-- If not logged in, show login/register links -->
                    <li><a href="/login">Log In</a></li>
                    <li><a href="/register">Register</a></li>
                <% } %>
            </ul>
        </section>
    </nav>

    <div class="container">
        <h1>Perfume Collection</h1>
        <div class="products-grid">
            <% if (products.length === 0) { %>
                <p>No products available.</p>
            <% } else { %>
                <% products.forEach(product => { %>
                    <div class="product-item">
                        <h2><a href="/products/<%= product.id %>"><%= product.name %></a></h2>
                        <img src="<%= product.picture %>" alt="<%= product.name %>">
                        <p>$<%= product.price %></p>
                        <p>Stock: <%= product.stock %></p>
                        <% if (user) { %> 
                            <form action="/cart/add" method="POST">
                                <input type="hidden" name="productId" value="<%= product.id %>">
                                <button type="submit">Add to Cart</button>
                            </form>
                        <% } else { %>
                            <p><a href="/login">Log in</a> to add to cart</p>
                        <% } %>
                    </div>
                <% }) %>
            <% } %>
        </div>
    </div>

    <footer>
        <p>&copy; 2024 Perfume Heaven. All Rights Reserved.</p>
    </footer>
</body>
</html>
